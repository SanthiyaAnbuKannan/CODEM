<!DOCTYPE html>
<html>
    <head>
        <title> Task 4 </title>
    </head>
    <body>
        <button onclick="coinToss('head')"> Heads </button>
        <button onclick="coinToss('tail')"> Tails </button>
    </body>
    <script>
        function coinToss(playerMove){
            let randomNumber = Math.random();
            let computerChoice = '';
            if (randomNumber < 0.5){
                computerChoice = 'head';
            }
            else{
                computerChoice = 'tail';
            }
            if(playerMove === computerChoice){
                alert(`Player choice = ${playerMove} Computer choice = ${computerChoice} Result = Player wins`);
            }
            else{
                alert(`Player choice = ${playerMove} Computer choice = ${computerChoice} Result = Player loses`);
            }
        }
    </script>
</html>
